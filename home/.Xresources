!Xft.dpi: 220
Xft.dpi: 96
Xcursor.size: 64

URxvt.font: xft:Source Code Pro for Powerline:size=10,xft:FontAwesome:size=10
URxvt.scrollBar: false
URxvt.saveLines: 2000
URxvt.urgentOnBell: True
URxvt.cursorBlink: True
URxvt.transparent: False
!URxvt.transparent: True
!URxvt.fading: 40
URxvt.shading: 30
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.iso14755: False
URxvt.perl-ext-common: default,clipboard

#define t_background       #2b2b2b
#define t_black #34323a
#define t_red   #c64f51
#define t_green #67897e
#define t_yellow #edca63
#define t_blue  #065a82
#define t_purple #5353a5
#define t_cyan #85b5bf
#define t_white #cebcab

*.foreground: t_black
*.background: t_white
*.cursorColor: t_black


! Black / Grey
*.color0:       t_black
*.color8:       t_black

! Red / Bright Red
*.color1:       t_red
*.color9:       t_red

! Green + Bright Green
*.color2:       t_green
*.color10:      t_green

! Yellow (Orange) + Bright Yellow (Yellow)
*.color3:       t_yellow
*.color11:      t_yellow

! Blue + Bright Blue
*.color4:       t_blue
*.color12:      t_blue

! Magenta (Purple) + Bright Magenta
*.color5:       t_purple
*.color13:      t_purple

! Cyan (Aqua) + Bright Cyan
*.color6:       t_cyan
*.color14:      t_cyan

! Light Grey (Selection) + White (Current Line)
*.color7: t_white
*.color15: t_white


!States: bg, fg, bgalt, hlbg, hlfg
rofi.color-enabled: true
rofi.fuzzy: true
rofi.dpi: 220
rofi.hide-scrollbar: true
rofi.color-normal: t_background,t_foreground,t_background,t_background,t_blue
rofi.color-urgent: t_background,t_red,t_background,t_background,t_orange
rofi.color-active: t_background,t_foreground,t_background,t_background,t_blue
!states: background, border
rofi.color-window: t_background,t_blue

rofi.separator-style: solid
rofi.sidebar-mode: false
rofi.bw: 4
rofi.columns: 1
rofi.padding: 50
rofi.eh: 1
rofi.line-margin: 35

!rofi.fullscreen: true
rofi.xoffset: 0
rofi.yoffset: 350
!rofi.opacity: 100
!rofi.fake-transparency: false
rofi.location: 2
rofi.width: 40
rofi.font: Source Sans Pro 15
rofi.lines: 3

rofi.border-radius: 8
